<div class="container">
    <div class="row">
        <form action="/admin/novedades/nueva" method="post"> 
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Título</label>
                    <input type="text" id="1" name="titulo">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Cuerpo</label>
                    <input type="text" id="2" name="cuerpo"></textarea>
                </div>
            </div>

              <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Tipo</label>
                    <input type="text" id="2" name="tipo"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
        {{#if error}}
          <p>Datos ingresados erróneos</p>
        {{/if}}
    </div>
</div>