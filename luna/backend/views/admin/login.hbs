<div class="container">
    <div class="row">
        <form action="/admin/login" method="post"> 
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label>Usuario</label>
                    <input type="text" id="1" name="usuario">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label>Contraseña</label>
                    <input type="password" id="2" name="password"></textarea>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
        {{#if error}}
          <p>Datos ingresados erróneos</p>
        {{/if}}
    </div>
</div>