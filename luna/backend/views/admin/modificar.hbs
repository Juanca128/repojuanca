<div class="container">
    <div class="row">
        <form action="/admin/novedades/modificar" method="post"> 
            <div class="mb-3 row">
                <div class="col-sm-10">                   
                    <input type="hidden" value="{{novedad.id}}" name="id">
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}" >
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
            </div>


              <div class="mb-3 row">
                <div class="col-sm-10">
                    <label class="labels">Tipo</label>
                    <input type="int" class="form-control" name="tipo" value="{{novedad.tipo}}" >
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Modificar</button>
        </form>
        {{#if error}}
          <p>Datos ingresados err√≥neos</p>
        {{/if}}
    </div>
</div>